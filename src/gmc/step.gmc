subdef touching_tile()
{
    top = top_offset+y;
    bottom = bottom_offset+y;
    left = left_offset+x;
    right = right_offset+x;
    
    var other = id;
    with (Tile)
    {
        if(other.bottom > top and other.top < bottom and other.right > left and other.left < right)
            return 1;
    }
    return 0;
}

with(Character)
{
    yspeed += 0.03;
    
    x += xspeed;
    y += yspeed;
    if(x > 500 and xspeed > 0)
        xspeed = -xspeed;
    if(x < 10 and xspeed < 0)
        xspeed = -xspeed;
    
    while(touching_tile())
    {
        yspeed = 0;
        y -= 0.5;
    }
    
    yspeed += 0.03;
}

print("stepped");
